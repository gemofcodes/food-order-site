<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>
  
  <%- include('../partials/nav.ejs') %>

  <div class="foods content">
    <h2>All Foods</h2>

    <% if(foods.length > 0){ %>
      <% for(i=0; i < foods.length; i++){ %>
        
        <a class="single" href="/foods/<%= foods[i]._id %>" >

          <h3 class="name"><%= foods[i].name  %></h3>
          <p class="price"><%= foods[i].price  %></p>
        </a>

      <% } %>      
    <% } else {  %>
      <p>There are no foods to display...</p>
    <% } %>
  </div>
  
  <%- include('../partials/footer.ejs') %>
</body>
</html>