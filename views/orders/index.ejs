<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>
  
  <%- include('../partials/nav.ejs') %>

  <div class="orders content">
    <h2>All Orders</h2>

    <% if(orders.length > 0){ %>
      <% for(i=0; i < orders.length; i++){ %>
        
        <a class="single" href="/orders/<%= orders[i]._id %>" >

          <h3 class="name"><%= orders[i].name  %></h3>
          <p class="quantity"><%= orders[i].quantity  %></p>
        </a>

      <% } %>      
    <% } else {  %>
      <p>There are no orders to display...</p>
    <% } %>
  </div>
  
  <%- include('../partials/footer.ejs') %>
</body>
</html>